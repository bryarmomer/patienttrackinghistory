<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.ourapp.patienttracker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/pttr"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/pttr"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <activity android:name="com.ourapp.patienttracker.SignUpActivity"
            android:screenOrientation="portrait"
            android:noHistory="true"/>

        <activity
            android:screenOrientation="portrait"
            android:name="com.ourapp.patienttracker.HomeActivity"
            android:label="@string/title_activity_home"
            android:noHistory="true"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="com.ourapp.patienttracker.MainActivity"
            android:noHistory="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>